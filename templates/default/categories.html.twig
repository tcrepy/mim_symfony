{% extends 'base.html.twig' %}


{% block body %}
    <h1>Liste des cat√©gories</h1>

    <div class="wrapper">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Date</th>
                <th scope="col">Gagnant</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td scope="row">{{ category.id }}</td>
                    <td><a href="{{ url('categoryTop', {'slug': category.slug}) }}">{{ category.name }}</a></td>
                    <td>{{ category.createdAt|date('d/m/Y H:m:s') }}</td>
                    <td>{{ category.getWinner }} - {{ category.getWinner.getNbVote }} vote(s)</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
